    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>PRODUCT</h2>

            </div>
            <div class="body">
                <div class="row clearfix">
                    <div class="col-md-3">
                        <p>
                            <b>Category</b>
                        </p>
                        <select id="CategoryDDL" class="form-control show-tick">
                            <option value="0">ALL</option>
                        </select>

                    </div>
